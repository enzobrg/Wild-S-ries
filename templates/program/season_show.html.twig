{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="media m-auto w-50">
        <div class="media-body">
            <h1 class="mb-5 text-center mt-4 text-light">{{ season.description }} de {{ program.title }}</h1>
            <p class="text-light text-center">{{ program.summary }}</p>
        </div>
        <div class="accordion" id="accordionExample">
            <h2 class="mb-5 text-light text-center mt-5">Liste des episodes</h2>
            {% for episode in episodes %}
                <h4><a href="{{ path('program_episode_show', { program : program.id, season : season.id, episode : episode.id }) }}">Episode {{ episode.number }} : {{ episode.title }}</a></h4>
            {% endfor %}
        </div>
        <div class="mt-5 d-flex justify-content-center">
        <a class="btn btn-warning" href="{{ path('app_index') }}">Retour Ã  l'accueil</a>
        </div>
    </div>
{% endblock %}
