{% extends 'base.html.twig' %}

{% block title %}Catégorie : {{ category.name }}{% endblock %}

{% block body %}

    <h1 class="text-light text-center mt-3">{{ category.name }}</h1>
    {% for program in programs %}
        <h2 class="text-light text-center mt-3">{{ program.id }} - {{ program.title }}</h2>
        <p class="text-light text-center mt-3">{{ program.summary }}</p>
        <a href="{{ path("program_show", { id: program.id }) }}" class="nav-link text-center text-light">Voir la fiche↪️</a>
    {% else %}
        <h3 class="text-light text-center mt-5">Aucune série trouvée ⛔️</h3>
    {% endfor %}
    <div>
        <a href="{{ path('category_index') }}" class="nav-link text-center text-light mt-5">Retour à la liste des catégories⬅️</a>
    </div>

{% endblock %}
