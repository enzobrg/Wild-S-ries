{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center text-light">Season</h1>

    <table class="table text-light">
        <tbody class="text-light text-center">
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
